{
  "author": "Fintruth LLC",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "dependencies": {
    "apollo-server-koa": "~2.3.1",
    "dotenv-safe": "~6.1.0",
    "graphql": "^14.1.0",
    "koa": "~2.6.2",
    "koa-jwt": "~3.5.1",
    "koa-morgan": "~1.0.1",
    "koa-router": "~7.4.0",
    "pg": "~7.8.0",
    "reflect-metadata": "~0.1.13",
    "source-map-support": "^0.5.10",
    "split": "~1.0.1",
    "type-graphql": "~0.16.0",
    "typedi": "~0.8.0",
    "typeorm": "~0.2.11",
    "typeorm-typedi-extensions": "~0.2.3",
    "winston": "~3.1.0"
  },
  "description": "An opinionated boilerplate for server development",
  "devDependencies": {
    "@types/dotenv-safe": "~5.0.3",
    "@types/koa-morgan": "~1.0.4",
    "@types/koa-router": "~7.0.37",
    "@types/split": "~1.0.0",
    "del-cli": "^1.1.0",
    "fork-ts-checker-webpack-plugin": "~0.5.2",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-loader": "~5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "webpack-cli": "~3.2.1"
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.12.0"
  },
  "files": [
    "build"
  ],
  "license": "UNLICENSED",
  "main": "build/main.js",
  "name": "@fintruth-sdk/server",
  "private": true,
  "repository": "https://github.com/fintruth/fintruth-sdk/tree/master/packages/server",
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "clean": "del build",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' '**/*.{js,ts,tsx}'",
    "lint:types": "tsc --noEmit",
    "prebuild": "yarn clean",
    "start": "nodemon",
    "test": "run-p test:*",
    "test:units": "jest --passWithNoTests"
  },
  "typings": "build/main.d.js",
  "version": "0.0.0",
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
