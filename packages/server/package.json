{
  "name": "@fintruth-sdk/server",
  "version": "0.1.0",
  "description": "An opinionated boilerplate for server development",
  "keywords": [
    "graphql",
    "postgresql",
    "server-boilerplate",
    "typeorm",
    "typescript"
  ],
  "homepage": "https://github.com/fintruth/fintruth-sdk/tree/develop/packages/client#readme",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "license": "UNLICENSED",
  "author": "Fintruth LLC <support@fintruth.com> (https://www.fintruth.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git",
    "directory": "packages/server"
  },
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "build:release": "yarn build --release",
    "clean": "del build coverage .eslintcache \"*.log*\"",
    "lint": "run-p lint:*",
    "lint:files": "prettylint \"**/*.{json,md,yml}\"",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern \"!**/.*\" \"**/*.{js,ts}\"",
    "lint:types": "tsc --noEmit",
    "migration:create": "yarn typeorm migration:create --name",
    "migration:generate": "yarn typeorm migration:generate --name",
    "migration:revert": "yarn typeorm migration:revert",
    "migration:run": "yarn typeorm migration:run",
    "prebuild": "yarn clean",
    "seed:create": "yarn typeorm migration:create --connection seed --name",
    "seed:revert": "yarn typeorm migration:revert --connection seed",
    "seed:run": "yarn typeorm migration:run --connection seed",
    "start": "run-p \"build --watch\" \"watch --exec \\\"wait-on build/main.js && node --inspect build/main.js\\\" --watch build\"",
    "test": "run-p test:*",
    "test:units": "jest",
    "typeorm": "ts-node --require tsconfig-paths/register node_modules/.bin/typeorm --config src/ormconfig.ts",
    "watch": "nodemon"
  },
  "dependencies": {
    "@casl/ability": "^3.4.0",
    "@fintruth-sdk/common": "^0.1.0",
    "@fintruth-sdk/validation": "^0.1.0",
    "apollo-server-express": "^2.9.15",
    "aws-sdk": "^2.599.0",
    "base64url": "^3.0.1",
    "bcrypt": "^3.0.7",
    "compression": "^1.7.4",
    "cookies": "^0.8.0",
    "cors": "^2.8.5",
    "date-fns": "^2.9.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "graphql": "^14.5.8",
    "graphql-rate-limit": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nact": "7.2.1",
    "pg": "^7.17.0",
    "qrcode": "^1.4.4",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.16",
    "speakeasy": "^2.0.0",
    "split": "^1.0.1",
    "type-graphql": "~0.17.6",
    "typedi": "~0.8.0",
    "typeorm": "~0.2.22",
    "typeorm-typedi-extensions": "~0.2.3",
    "uuid": "^3.3.3",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.1",
    "@types/cookies": "^0.7.4",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.2",
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/qrcode": "^1.3.4",
    "@types/ramda": "^0.26.39",
    "@types/speakeasy": "^2.0.5",
    "@types/split": "^1.0.0",
    "@types/uuid": "^3.4.6",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^5.0.2",
    "nodemon": "^2.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "webpack-cli": "^3.3.10"
  },
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.16"
  },
  "private": true,
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettylint --fix",
      "git add"
    ]
  }
}
