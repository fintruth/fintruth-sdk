{
  "name": "@fintruth-sdk/server",
  "private": true,
  "version": "0.0.0",
  "description": "An opinionated boilerplate for server development",
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "build:release": "yarn build --release",
    "clean": "del build",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' '**/*.{js,ts}'",
    "lint:types": "tsc --noEmit",
    "prebuild": "yarn clean",
    "start": "nodemon",
    "test": "run-p test:*",
    "test:units": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git",
    "directory": "packages/server"
  },
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "dependencies": {
    "@fintruth-sdk/shared": "^0.1.0",
    "apollo-server-express": "^2.4.8",
    "base64url": "^3.0.1",
    "bcrypt": "^3.0.5",
    "compression": "^1.7.4",
    "cookies": "^0.7.3",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "~7.9.0",
    "qrcode": "^1.3.3",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.11",
    "speakeasy": "^2.0.0",
    "split": "~1.0.1",
    "type-graphql": "~0.17.0",
    "typedi": "~0.8.0",
    "typeorm": "~0.2.16",
    "typeorm-typedi-extensions": "~0.2.3",
    "uuid": "^3.3.2",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^0.0.36",
    "@types/cookies": "^0.7.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/graphql": "^14.0.7",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/qrcode": "^1.3.2",
    "@types/ramda": "^0.26.5",
    "@types/speakeasy": "^2.0.4",
    "@types/split": "^1.0.0",
    "@types/uuid": "^3.4.4",
    "del-cli": "^1.1.0",
    "dotenv-webpack": "^1.7.0",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "webpack-cli": "^3.3.0"
  },
  "engines": {
    "node": ">=10.15",
    "yarn": ">=1.12"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
