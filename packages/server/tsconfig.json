{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "*": ["src/*"]
    },
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
