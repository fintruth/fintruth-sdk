{
  "name": "@fintruth-sdk/scripts",
  "private": true,
  "version": "0.1.0",
  "description": "Toolkit for sharing common configuration",
  "files": [
    "build",
    ".eslintrc.js",
    ".prettierrc.js"
  ],
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:release": "yarn build",
    "clean": "del build",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' '**/*.{js,ts}'",
    "lint:types": "tsc --noEmit",
    "prebuild": "yarn clean",
    "test": "echo \\\"No tests specified\\\" && exit 0"
  },
  "repository": "https://github.com/fintruth/fintruth-sdk/tree/master/packages/scripts",
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^7.1.0"
  },
  "peerDependencies": {
    "eslint": ">=5"
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.12.0"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
