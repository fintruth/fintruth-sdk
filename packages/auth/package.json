{
  "name": "@fintruth-sdk/auth",
  "private": true,
  "version": "0.1.0",
  "description": "Authentication module",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:release": "yarn build",
    "clean": "del build",
    "lint": "run-p lint:*",
    "lint:files": "prettylint --ignore-path .gitignore '**/*.{json,md,yml}'",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' '**/*.{js,ts}'",
    "lint:types": "tsc --noEmit",
    "prebuild": "yarn clean",
    "test": "run-p test:*",
    "test:units": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git",
    "directory": "packages/validation"
  },
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "dependencies": {
    "@casl/ability": "^3.0.2",
    "@fintruth-sdk/shared": "^0.1.0"
  },
  "engines": {
    "node": ">=10.15",
    "yarn": ">=1.12"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettylint --fix",
        "git add"
      ]
    }
  }
}
