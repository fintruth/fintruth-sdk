{
  "name": "fintruth-sdk",
  "version": "0.1.0",
  "description": "Software development kit for Fintruth projects",
  "keywords": [
    "boilerplate",
    "lerna",
    "nodejs",
    "template-repository"
  ],
  "homepage": "https://github.com/fintruth/fintruth-sdk#readme",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "license": "UNLICENSED",
  "author": "Fintruth LLC <support@fintruth.com> (https://www.fintruth.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git"
  },
  "scripts": {
    "build": "lerna run --stream build",
    "build:release": "lerna run --stream build:release",
    "clean": "del .eslintcache \"*.log*\" && lerna run --stream clean",
    "lint": "run-p lint:* && lerna run --stream lint",
    "lint:files": "prettylint --ignore-path .gitignore \"**/*.{json,md,yml}\" \"!packages/**\"",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern \"!**/.*\" --ignore-pattern \"packages/**\" \"**/*.{js,ts}\"",
    "lint:types": "tsc --noEmit",
    "start": "lerna run --parallel --scope @fintruth-sdk/client --scope @fintruth-sdk/server --stream start",
    "test": "run-p test:* && lerna run --stream test",
    "test:e2e": "wait-on http://localhost:3000 http://localhost:4000 && cypress run"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@testing-library/cypress": "^4.1.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "codecov": "^3.5.0",
    "cypress": "^3.4.1",
    "del-cli": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^10.0.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-config": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettylint": "^1.0.0",
    "test-data-bot": "^0.8.0",
    "ts-loader": "^6.0.4",
    "typescript": "~3.5.3",
    "wait-on": "^3.3.0",
    "webpack": "^4.39.2",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.16"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --concurrency 1 --stream lint-staged"
    }
  },
  "lint-staged": {
    "!(packages/**)*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "!(packages/**)*.{json,md,yml}": [
      "prettylint --fix",
      "git add"
    ]
  }
}
