{
  "name": "fintruth-sdk",
  "private": true,
  "version": "0.0.0",
  "description": "Software development kit for Fintruth projects",
  "scripts": {
    "build": "lerna run build",
    "build:release": "lerna run build:release",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "prebuild": "yarn clean",
    "start": "lerna run --parallel --stream --scope @fintruth-sdk/server --scope @fintruth-sdk/client start",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git"
  },
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^7.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-circus": "^24.1.0",
    "jest-config": "^24.1.0",
    "lerna": "^3.10.8",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "typescript": "~3.3.3",
    "webpack": "^4.29.3",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": ">=10.15.1",
    "yarn": ">=1.12.0"
  },
  "workspaces": {
    "nohoist": [
      "**/@loadable/server",
      "**/@loadable/server/**",
      "**/cypress",
      "**/cypress/**",
      "**/express",
      "**/express/**",
      "**/node-fetch",
      "**/node-fetch/**"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --concurrency 1 --stream lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "packages/**"
    ],
    "linters": {
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
