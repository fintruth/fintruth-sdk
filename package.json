{
  "name": "fintruth-sdk",
  "private": true,
  "version": "0.0.0",
  "description": "Software development kit for Fintruth projects",
  "scripts": {
    "build": "lerna run --stream build",
    "build:release": "lerna run --stream build:release",
    "clean": "lerna run --stream clean",
    "lint": "yarn run-p lint:* && lerna run --stream lint",
    "lint:files": "prettylint --ignore-path .gitignore '**/*.{json,md,yml}' '!packages/**'",
    "lint:scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' --ignore-pattern 'packages/**' '**/*.js'",
    "start": "lerna run --parallel --scope @fintruth-sdk/server --scope @fintruth-sdk/client --stream start",
    "test": "lerna run --stream test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git"
  },
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^9.1.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "jest-config": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettylint": "^1.0.0",
    "typescript": "~3.5.2",
    "webpack": "^4.35.2",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": ">=10.15",
    "yarn": ">=1.12"
  },
  "workspaces": {
    "nohoist": [
      "**/@loadable/server",
      "**/@loadable/server/**",
      "**/cypress",
      "**/cypress/**",
      "**/express",
      "**/express/**",
      "**/polished",
      "**/polished/**",
      "**/node-fetch",
      "**/node-fetch/**"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --concurrency 1 --stream lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "packages/**"
    ],
    "linters": {
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettylint --fix",
        "git add"
      ]
    }
  }
}
