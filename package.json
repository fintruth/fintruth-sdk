{
  "name": "fintruth-sdk",
  "private": true,
  "version": "0.0.0",
  "description": "Software development kit for Fintruth projects",
  "scripts": {
    "build": "lerna run build",
    "build:release": "lerna run build:release",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "prebuild": "yarn clean",
    "start": "lerna run --parallel --stream --scope @fintruth-sdk/server --scope @fintruth-sdk/client start",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fintruth/fintruth-sdk.git"
  },
  "author": "Fintruth LLC",
  "license": "UNLICENSED",
  "bugs": "https://github.com/fintruth/fintruth-sdk/issues",
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.20",
    "eslint": "^5.12.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-circus": "^24.0.0",
    "jest-config": "^24.0.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.2",
    "typescript": "~3.2.4",
    "webpack": "^4.29.0",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.12.0"
  },
  "workspaces": {
    "nohoist": [
      "**/@fintruth-sdk/scripts",
      "**/@fintruth-sdk/scripts/**",
      "**/@loadable/server",
      "**/@loadable/server/**",
      "**/cypress",
      "**/cypress/**",
      "**/express",
      "**/express/**",
      "**/isomorphic-fetch",
      "**/isomorphic-fetch/**"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna exec --concurrency 1 --stream lint-staged"
    }
  }
}
