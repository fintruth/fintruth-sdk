{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "del-cli": "^1.1.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "~22.1.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "^1.0.0-rc.2",
    "husky": "~1.3.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "lerna": "^3.10.2",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "typescript": "~3.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna exec --parallel -- del build",
    "lint": "yarn lint-scripts",
    "lint-scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' 'packages/**/*.{js,ts,tsx}'",
    "prebuild": "yarn clean",
    "build": "lerna run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
